<%= form_for ([@posting, @upload]), html: {class: "form-horizontal", multipart: true} do |f| %>
<% if @upload.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

  <ul>
    <% @upload.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<fieldset>
  <legend><%= @form_title %></legend>
  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "input-xlarge" %>
    </div>
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :description, class: "input-xlarge" %>
    </div>
    <%= f.label :file_name, class: "control-label" %>
    <div class="controls">
      <%= f.file_field :file_name, class: "input-xlarge" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</fieldset>

<% end %>
