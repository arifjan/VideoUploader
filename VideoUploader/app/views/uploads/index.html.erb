<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @posting.uploads.each do |upload| %>
  <tr>
    <td><%= link_to upload.name, upload %></td>
    <td><%= upload.description %></td>
    <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
    <td><%= link_to 'Delete Upload', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

